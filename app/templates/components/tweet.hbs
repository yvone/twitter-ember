<div class="tweet-wrapper row">
	<div>
		<img
			{{!-- class="small-avatar" 
			src="https://static.onecms.io/wp-content/uploads/sites/37/2017/05/15215238/102997431.jpg"--}}
			src={{@data.user.avatar}}
		/>
	</div>
	<div class="column tweet-content">
		<div class="row">
			<p class="user-name">
				{{if @data.user.username @data.user.username 'Yvone'}}
			</p>
			<span class="timestamp">{{@data.createdAt}}</span>
		</div>
		<div class="tweet-info">{{@data.description}}</div>
	</div>
</div>
